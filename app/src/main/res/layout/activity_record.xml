<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hami.muli_app.RecordActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : "
        android:id="@+id/id"
        android:layout_alignParentStart="true"
        android:textColor="#fafafa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:id="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:textColor="#fafafa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father Name : "
        android:id="@+id/fname"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:textColor="#fafafa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll No : "
        android:id="@+id/roll"
        android:layout_below="@+id/fname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:textColor="#fafafa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batch No : "
        android:id="@+id/batch"
        android:layout_below="@+id/roll"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:textColor="#fafafa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/f2"
        android:layout_alignTop="@+id/name"
        android:layout_alignEnd="@+id/f3"
        android:layout_toEndOf="@+id/fname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/f3"
        android:layout_alignTop="@+id/fname"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/fname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f4"
        android:layout_alignTop="@+id/roll"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/roll"
        android:layout_alignStart="@+id/f3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f5"
        android:layout_alignTop="@+id/batch"
        android:layout_alignEnd="@+id/f4"
        android:layout_alignStart="@+id/f4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f1"
        android:layout_above="@+id/f2"
        android:layout_alignStart="@+id/f2"
        android:layout_alignEnd="@+id/f2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address : "
        android:id="@+id/adres"
        android:layout_below="@+id/f5"
        android:layout_alignParentStart="true"
        android:textColor="#fafafa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f6"
        android:layout_below="@+id/f5"
        android:layout_alignStart="@+id/f5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No# : "
        android:id="@+id/phone"
        android:layout_below="@+id/f6"
        android:layout_alignParentStart="true"
        android:textColor="#fafafa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f7"
        android:layout_below="@+id/f6"
        android:layout_alignStart="@+id/f6"
        android:layout_alignEnd="@+id/f6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/add"
        android:textColor="#fafafa"
        android:background="#ff009688"
        android:layout_above="@+id/update"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/update"
        android:textColor="#fafafa"
        android:background="#ff009688"
        android:layout_above="@+id/delete"
        android:layout_toEndOf="@+id/adres" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete"
        android:textColor="#fafafa"
        android:background="#ff009688"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/show"
        android:textColor="#fafafa"
        android:background="#ff009688"
        android:layout_marginStart="28dp"
        android:layout_above="@+id/delete"
        android:layout_toEndOf="@+id/delete" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear"
        android:textColor="#fafafa"
        android:onClick="clear"
        android:background="#ff009688"
        android:layout_above="@+id/update"
        android:layout_alignStart="@+id/back" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:textColor="#fafafa"
        android:onClick="back"
        android:background="#ff009688"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
