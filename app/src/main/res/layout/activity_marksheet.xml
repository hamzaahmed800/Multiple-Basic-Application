<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hami.muli_app.MarksheetActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MARKSHEET"
        android:id="@+id/sheet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage"
        android:id="@+id/percent"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_above="@+id/t2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maths : "
        android:id="@+id/math"
        android:layout_above="@+id/t3"
        android:layout_alignStart="@+id/totalmarks" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Physics : "
        android:id="@+id/phy"
        android:layout_above="@+id/t5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chemistry : "
        android:id="@+id/chem"
        android:layout_above="@+id/t7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="English : "
        android:id="@+id/english"
        android:layout_above="@+id/t9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Urdu : "
        android:id="@+id/urdu"
        android:layout_above="@+id/t11"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t1"
        android:layout_above="@+id/t3"
        android:layout_alignStart="@+id/t3"
        android:layout_alignEnd="@+id/sheet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t2"
        android:layout_alignTop="@+id/t1"
        android:layout_toEndOf="@+id/t1"
        android:layout_alignStart="@+id/t4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t3"
        android:layout_above="@+id/t6"
        android:layout_alignStart="@+id/t5"
        android:layout_alignEnd="@+id/t5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t4"
        android:layout_above="@+id/t6"
        android:layout_alignStart="@+id/percent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t6"
        android:layout_alignStart="@+id/t4"
        android:layout_alignBottom="@+id/chem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t7"
        android:layout_above="@+id/t9"
        android:layout_alignEnd="@+id/sheet"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t8"
        android:layout_above="@+id/t10"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/t6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t9"
        android:layout_alignBottom="@+id/urdu"
        android:layout_alignEnd="@+id/sheet"
        android:layout_alignStart="@+id/t7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t10"
        android:layout_alignTop="@+id/t9"
        android:layout_alignStart="@+id/t8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t11"
        android:layout_alignBottom="@+id/totalmarks"
        android:layout_alignStart="@+id/t9"
        android:layout_alignEnd="@+id/t9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t12"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/t11"
        android:layout_alignStart="@+id/t11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Marks : "
        android:id="@+id/totalmarks"
        android:layout_above="@+id/t12"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Percentage : "
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/totalmarks" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/t5"
        android:layout_alignTop="@+id/t6"
        android:layout_alignStart="@+id/t12"
        android:layout_alignEnd="@+id/sheet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Student Name : "
        android:id="@+id/name"
        android:layout_below="@+id/sheet"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seat No# : "
        android:id="@+id/seatno"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namefld"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollnofld"
        android:layout_alignBottom="@+id/seatno"
        android:layout_alignStart="@+id/namefld"
        android:layout_alignEnd="@+id/percent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marks"
        android:id="@+id/mark"
        android:layout_above="@+id/t1"
        android:layout_alignStart="@+id/t1"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/show"
        android:layout_alignTop="@+id/back"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/t11" />


</RelativeLayout>
