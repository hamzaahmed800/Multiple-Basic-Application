<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hami.muli_app.WelcomeActivity"
    android:background="@drawable/background"
    style="@style/Base.DialogWindowTitleBackground.AppCompat">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/w"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_secondary_text_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculator"
        android:layout_marginTop="89dp"
        android:background="@drawable/calculator"
        android:layout_below="@+id/w"
        android:layout_toStartOf="@+id/w"
        android:onClick="Calculator" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currencyconveter"
        android:background="@drawable/currency_exchange_bg"
        android:layout_alignTop="@+id/calculator"
        android:layout_toEndOf="@+id/w"
        android:onClick="Currency" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/markhseet"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/w"
        android:background="@drawable/result"
        android:onClick="Marksheet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentData"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/currencyconveter"
        android:background="@drawable/record"
        android:visibility="visible"
        android:shadowColor="@color/abc_input_method_navigation_guard"
        android:onClick="Record" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        android:layout_marginTop="79dp"
        android:background="@drawable/exit"
        android:layout_below="@+id/markhseet"
        android:layout_centerHorizontal="true"
        android:onClick="exit" />
</RelativeLayout>
